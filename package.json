{
  "private": true,
  "name": "graphql-auth-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/lffg/graphql-auth-boilerplate.git",
  "author": "Luiz Felipe",
  "license": "MIT",
  "scripts": {
    "build": "yarn check-all && del ./dist && tsc",
    "prettier": "prettier --config .prettierrc.json --write 'src/**/*'",
    "lint": "tslint --project tsconfig.json",
    "check-all": "yarn prettier && yarn lint",
    "start": "ts-node-dev --respawn --notify=false src/index.ts",
    "c": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-all",
      "pre-push": "yarn check-all"
    }
  },
  "dependencies": {
    "apollo-server-express": "^2.3.3",
    "argon2": "^0.20.1",
    "class-validator": "^0.9.1",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "mysql": "^2.16.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.16.0",
    "typeorm": "^0.2.12",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^5.0.3",
    "@types/express": "^4.16.1",
    "@types/node": "^10.12.18",
    "@types/uuid": "^3.4.4",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "del-cli": "^1.1.0",
    "husky": "^1.3.1",
    "prettier": "^1.16.1",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  }
}
